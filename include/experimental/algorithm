  auto qq = &std::offset<1>::__cxxamp_opencl_index;
  int* foo = reinterpret_cast<int*>(&replace_copy_if_wrapper<Function, InputIterator, OutputIterator, T>::__cxxamp_trampoline);
#endif
  }
